{
  "buildCommand": "npm run build && npm run build:api",
  "outputDirectory": "dist",
  "framework": "vite",
  "functions": {
    "api/database.ts": {
      "runtime": "@vercel/node"
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}